{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./dist",
  },
  "include": ["examples/**/*", "scripts/**/*"],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
